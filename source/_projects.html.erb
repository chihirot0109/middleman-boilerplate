<div class="section section-facilita">
  <h2>Applications</h2>
  <div class="item-section">
    <div class="contents">
      <div class="text text-facilita">
        <h3>Facilita</h3>
        <p><strong>Lead Developer</strong></p>
        <p>
          <small><%= t(:period) %>: 2 weeks</small><br>
          <small><%= t(:type) %>: Team app</small><br>
          <small><%= t(:charge) %>: <%= t(:facilita_charge) %></small><br>
          <br>
          <%= t(:facilita) %>
        </p>
        <%= link_to "check this app", "https://www.facilita.fun", target: "_blank", class: "btn btn-outline" %>
      </div>
      <%= image_tag "background.png", class: "bg bg-facilita"%>
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">　
      <div class="carousel-inner facilita">
        <div class="carousel-item active">
          <%= image_tag "facilita_1.png", class: "d-block w-100" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "facilita_2.png", class: "d-block w-100" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "facilita_3.png", class: "d-block w-100" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "facilita_4.png", class: "d-block w-100" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "facilita_5.png", class: "d-block w-100" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "facilita_6.png", class: "d-block w-100" %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
